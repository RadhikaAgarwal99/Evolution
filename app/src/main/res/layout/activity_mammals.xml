<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorForeground"
    tools:context=".Mammals">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="MAMMALS"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/btncre"
        android:layout_width="130dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnjur"
        android:layout_marginEnd="15dp"
        android:background="@android:color/holo_orange_light"
        android:text="Creataceous (145-66 ma)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="321dp" />

    <Button
        android:id="@+id/btnjur"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btntri"
        android:layout_marginStart="115dp"
        android:background="@android:color/holo_orange_light"
        android:text="Jurassic (201-145 MA)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="321dp" />

    <Button
        android:id="@+id/btntri"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="186dp"
        android:layout_toStartOf="@+id/textView9"
        android:background="@android:color/holo_orange_light"
        android:text="TRIASSIC (251-199 MA)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/btnoli"
        android:layout_width="130dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/btncre"
        android:layout_alignTop="@+id/btneoc"
        android:background="@android:color/holo_orange_light"
        android:text="Oligocene (34-23 ma)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/btneoc"
        android:layout_width="90dp"
        android:layout_height="73dp"
        android:layout_alignStart="@+id/btnjur"
        android:layout_alignTop="@+id/btnpal"
        android:background="@android:color/holo_orange_light"
        android:text="Eocene (56-34 ma)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="411dp" />

    <Button
        android:id="@+id/btnpal"
        android:layout_width="100dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_toStartOf="@+id/textView9"
        android:background="@android:color/holo_orange_light"
        android:text="Paleocene (66-56 ma)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/btnmio"
        android:layout_width="109dp"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="60dp"
        android:background="@android:color/holo_orange_light"
        android:text="Miocene (23-5.3 ma)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="219dp" />

    <Button
        android:id="@+id/btnpil"
        android:layout_width="109dp"
        android:layout_height="73dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnmio"
        android:layout_marginEnd="60dp"
        android:background="@android:color/holo_orange_light"
        android:text="Pilocene (5.3 ma to present)"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="321dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="272dp"
        android:layout_height="185dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/mammals" />
</RelativeLayout>