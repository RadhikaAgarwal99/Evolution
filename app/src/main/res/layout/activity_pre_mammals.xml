<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorForeground"
    tools:context=".PreMammals">

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="PRE MAMMALS"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="32dp" />

    <Button
        android:id="@+id/btnPreCre"
        android:layout_width="132dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:background="@android:color/holo_orange_light"
        android:text="CRETACEOUS PERIOD (145-66 MA)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPreJur"
        android:layout_width="132dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnPreTri2"
        android:layout_marginEnd="37dp"
        android:background="@android:color/holo_orange_light"
        android:text="JURASSIC PERIOD (201-145 MA)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPreTri2"
        android:layout_width="132dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="167dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/holo_orange_light"
        android:text="TRIASSIC PERIOD (251-199 ma)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        app:srcCompat="@drawable/premammals" />
</RelativeLayout>